{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/lib/*": ["./lib/*"],
      "@/styles/*": ["./styles/*"],
      "@shared/types/*": ["../../packages/shared/types/*"],
      "@shared/utils/*": ["../../packages/shared/utils/*"],
      "@shared/api/*": ["../../packages/shared/api-clients/*"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "incremental": true
  },
  "include": [
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

